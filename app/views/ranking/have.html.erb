<div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h1>Have ランキング</h1>
      <%= link_to 'モノを探しに行く' , login_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>
<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @haves.each do |have| %>
      <div class="item-box">
      	<h3 class="ranking-number">
      			<%= @count +=1 %>位
      			<%= have.have_users.count %> Haves
      	</h3>
        <div class="image">
          <div class="img-wrap">
            <% if have.large_image.present? %>
              <%= image_tag(have.large_image , alt: have.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: have.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= have.title %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>