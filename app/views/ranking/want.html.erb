<div class="cover">
  <div class="cover-inner">
    <div class="cover-contents">
      <h1>Want ランキング</h1>
      <%= link_to 'モノを探しに行く' , login_path, class: "btn btn-success btn-lg" %>
    </div>
  </div>
</div>

<div class="container">
  <div class="container-inner inner-default clearfix">
    <% @wants.each do |want| %>
      <div class="item-box">
      	<h3 class="ranking-number">
      			<%= @count +=1 %>位
      			<%= want.want_users.count %> Wants
      	</h3>
        <div class="image">
          <div class="img-wrap">
            <% if want.large_image.present? %>
              <%= image_tag(want.large_image , alt: want.title) %>
            <% else %>
              <%= image_tag("no-image.png" , alt: want.title) %>
            <% end %>
          </div>
        </div>
        <div class="detail">
          <p class="title">
            <%= want.title %>
          </p>
        </div>
      </div>
    <% end %>
  </div>
</div>